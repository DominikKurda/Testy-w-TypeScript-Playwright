import { test, expect } from '@playwright/test';

test('Parabank: przejÅ›cie przez formularz rejestracji', async ({ page }) => {
    await page.goto('https://parabank.parasoft.com/parabank/index.htm', {
        waitUntil: 'domcontentloaded',
    });

    await page.getByRole('link', { name: /register/i }).click();
    await expect(page).toHaveURL(/register\.htm/i);

    await page.locator('input[name="customer.firstName"]').fill('Jan');
    await page.locator('input[name="customer.lastName"]').fill('Kowalski');
    await page.locator('input[name="customer.address.street"]').fill('Testowa 1');
    await page.locator('input[name="customer.address.city"]').fill('Warszawa');
    await page.locator('input[name="customer.address.state"]').fill('Mazowieckie');
    await page.locator('input[name="customer.address.zipCode"]').fill('00-001');
    await page.locator('input[name="customer.phoneNumber"]').fill('123456789');
    await page.locator('input[name="customer.ssn"]').fill('123-45-6789');
    await page.locator('input[name="customer.username"]').fill('test-user');
    await page.locator('input[name="customer.password"]').fill('test123');
    await page.locator('input[name="repeatedPassword"]').fill('test123');

    await page.locator('input[value="Register"]').click();

    await expect(page.locator('#rightPanel')).toBeVisible();
});
